<UserControl x:Class="AktienEngine.View.LauncherWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AktienEngine.View"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1200">
    <Grid Background="Wheat">
        <Button Content="Crash or Boom" Command="{Binding SelectCOB}" Width="200" Height="50" HorizontalAlignment="Right"/>
        <Button Content="News Game" Command="{Binding SelectNG}" Width="200" Height="50" HorizontalAlignment="Left"/>
    </Grid>
</UserControl>
