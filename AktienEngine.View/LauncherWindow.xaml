<UserControl x:Class="AktienEngine.View.LauncherWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AktienEngine.View" 
             xmlns:viewmodel="clr-namespace:AktienEngine.ViewModel;assembly=AktienEngine.ViewModel" 
             d:DataContext="{d:DesignInstance Type=viewmodel:VMMainWindow}"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1200">

    <UserControl.Resources>
        <Style x:Key="NoHover" TargetType="Button">
            <Setter Property="Background" Value="#01FFFFFF"/>
            <!-- fast transparent, aber für HitTest nötig -->
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Focusable" Value="true"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Stretch"
                                      VerticalAlignment="Stretch"
                                      RecognizesAccessKey="True"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>



        <Style x:Key="GameImageBorder" TargetType="Border">
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Background" Value="{x:Null}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#ede0d4"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Opacity" Value="0.65"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect x:Name="shadow" Color="Transparent" ShadowDepth="0" BlurRadius="0"/>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <!-- Hover rein -->
                <EventTrigger RoutedEvent="MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <!-- Opacity -->
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                     To="1" Duration="0:0:0.4"/>

                            <!-- Blur -->
                            <DoubleAnimation Storyboard.TargetProperty="(Effect).BlurRadius"
                                     To="25" Duration="0:0:0.15"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>

                <!-- Hover raus -->
                <EventTrigger RoutedEvent="MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <!-- Opacity zurück -->
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                     To="0.65" Duration="0:0:0.4"/>

                            <!-- Blur zurück -->
                            <DoubleAnimation Storyboard.TargetProperty="(Effect).BlurRadius"
                                     To="0" Duration="0:0:0.15"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>

    </UserControl.Resources>
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="-0.5,-0.5" EndPoint="0.8, 1">
                <GradientStop Color="#1b292a" Offset="0.0"/>
                <GradientStop Color="#243133" Offset="0.4"/>
                <GradientStop Color="#0b1819" Offset="0.8"/>
            </LinearGradientBrush>
        </Grid.Background>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="0.6*"/>
            <RowDefinition Height="0.4*"/>
        </Grid.RowDefinitions>

            <!--Icons für Spiele-->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Margin="50 0 0 0"
                Style="{StaticResource GameImageBorder}" 
                HorizontalAlignment="Center" VerticalAlignment="Center">

                <Border.Background>
                    <ImageBrush ImageSource="/CrashOrBoom/COB_Gamevorschau.png"
                    Stretch="UniformToFill" />
                </Border.Background>

                <Button Width="250" Height="250" Cursor="Hand" ClipToBounds="True" Style="{StaticResource NoHover}"
                        Command="{Binding SelectImageCommand}" CommandParameter="0">
                    <Grid />
                </Button>
            </Border>

            <Border Grid.Column="1"
                Style="{StaticResource GameImageBorder}" 
                HorizontalAlignment="Center" VerticalAlignment="Center">

                <Border.Background>
                    <ImageBrush ImageSource="/NewsTrader/NT_Gamevorschau.png"
                    Stretch="UniformToFill" />
                </Border.Background>

                <Button Width="250" Height="250" Cursor="Hand" ClipToBounds="True" Style="{StaticResource NoHover}"
                        Command="{Binding SelectImageCommand}" CommandParameter="1">
                    <Grid />
                </Button>
            </Border>

            <Border Grid.Column="2" Margin="0 0 50 0"
        Style="{StaticResource GameImageBorder}" 
        HorizontalAlignment="Center" VerticalAlignment="Center" Cursor="">

                <!-- Hintergrundbild -->
                <Border.Background>
                    <ImageBrush ImageSource="/BullOrBear/BOB_Gamevorschau.png"
                    Stretch="UniformToFill" />
                </Border.Background>

                <!-- Klickbarer Button über dem Bild -->
                <Button Width="250" Height="250"
                         Cursor="Hand"
                        Command="{Binding SelectImageCommand}" 
                        Style="{StaticResource NoHover}"
                        CommandParameter="2">
                    <!-- Leerer Grid-Content, um die Fläche voll zu machen -->
                    <Grid/>
                </Button>
            </Border>
        </Grid>



        <!--Beschreibung und BTNs-->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.2*" />
                <RowDefinition Height="0.8*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.7*" />
                <ColumnDefinition Width="0.3*" />
            </Grid.ColumnDefinitions>

            <TextBlock Text="{Binding LabGametitel}" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" 
                       Foreground="#ede0d4" FontSize="42" TextDecorations="Underline"
                       HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock.Effect>
                    <DropShadowEffect Color="#ede0d4"
                                      BlurRadius="5"
                                      ShadowDepth="0"
                                      Opacity="1" />
                </TextBlock.Effect>
            </TextBlock>

            <TextBlock Text="{Binding LabGamebeschreibung}" Grid.Row="1" Grid.Column="0"
                       Foreground="{StaticResource White}" FontSize="22" 
                       Width="600" TextWrapping="Wrap" Margin="90 0 0 20"
                       HorizontalAlignment="Left" VerticalAlignment="Center"/>

            <Button Grid.Column="1" Grid.Row="0" Grid.RowSpan="2"
                    Content="Los geht's !" Command="{Binding SelectGame}"
                    BorderBrush="#ede0d4" BorderThickness="2" FontSize="25" Cursor="Hand" >

                <!-- DropShadowEffect direkt auf Button -->
                <Button.Effect>
                    <DropShadowEffect Color="White" ShadowDepth="0" BlurRadius="0" Opacity="0"/>
                </Button.Effect>

                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="{StaticResource Gray}"/>
                        <Setter Property="BorderBrush" Value="#ede0d4"/>
                        <Setter Property="Foreground" Value="#DDDDCC"/>
                        <Setter Property="FontSize" Value="25"/>
                        <Setter Property="Width" Value="200"/>
                        <Setter Property="Height" Value="80"/>
                        <Setter Property="Margin" Value="0 20 50 0"/>
                        <Setter Property="BorderThickness" Value="2"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border CornerRadius="10"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>

                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="(Effect).BlurRadius"
                                                 To="40" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetProperty="(Effect).Opacity"
                                                 To="0.8" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="(Effect).BlurRadius"
                                                 To="0" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetProperty="(Effect).Opacity"
                                                 To="0" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Grid>
</UserControl>
